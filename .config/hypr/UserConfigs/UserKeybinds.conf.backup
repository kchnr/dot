# /* ---- Clean Minimal Hyprland Keybinds ---- */ #
# Essential functionality only, no global shortcut conflicts
# Super as main modifier (GNOME-style)

# /* ---- Variables ---- */ #
$mainMod = SUPER
$scriptsDir = $HOME/.config/hypr/scripts
$UserConfigs = $HOME/.config/hypr/UserConfigs

# Load default apps
source= $UserConfigs/01-UserDefaults.conf

# ============================================
# APPLICATION LAUNCHER (GNOME-STYLE)
# ============================================

# Super key alone opens app launcher (like GNOME Activities)
bindr = $mainMod, $mainMod_L, exec, pkill rofi || rofi -show drun

# Alternative explicit shortcut (Super+D)
bindd = $mainMod, D, app launcher, exec, pkill rofi || rofi -show drun

# ============================================
# KEYBOARD LAYOUT SWITCHING
# ============================================

# Switch keyboard layout (Super+Space)
bindd = $mainMod, SPACE, switch keyboard layout, exec, $scriptsDir/SwitchKeyboardLayout.sh

# ============================================
# ESSENTIAL APPLICATIONS
# ============================================

bindd = $mainMod, Return, Open terminal, exec, $term
bindd = $mainMod, E, file manager, exec, $files
bindd = $mainMod, B, open browser, exec, xdg-open "https://"

# ============================================
# WINDOW MANAGEMENT
# ============================================

bindd = $mainMod, Q, close window, killactive,
bindd = $mainMod, F, toggle fullscreen, fullscreen,
bindd = $mainMod, TAB, toggle floating, togglefloating,

# Window switching (standard Alt+Tab)
bindd = ALT, Tab, cycle windows, cyclenext,
bindd = ALT, Tab, bring to top, bringactivetotop,

# ============================================
# WORKSPACE MANAGEMENT
# ============================================

# Switch workspaces with Super + [1-9] using key codes for reliability
bindd = $mainMod, code:10, workspace 1, workspace, 1
bindd = $mainMod, code:11, workspace 2, workspace, 2
bindd = $mainMod, code:12, workspace 3, workspace, 3
bindd = $mainMod, code:13, workspace 4, workspace, 4
bindd = $mainMod, code:14, workspace 5, workspace, 5
bindd = $mainMod, code:15, workspace 6, workspace, 6
bindd = $mainMod, code:16, workspace 7, workspace, 7
bindd = $mainMod, code:17, workspace 8, workspace, 8
bindd = $mainMod, code:18, workspace 9, workspace, 9
bindd = $mainMod, code:19, workspace 10, workspace, 10

# Move window to workspace with Super+Shift+[1-9] using key codes
bindd = $mainMod SHIFT, code:10, move to workspace 1, movetoworkspace, 1
bindd = $mainMod SHIFT, code:11, move to workspace 2, movetoworkspace, 2
bindd = $mainMod SHIFT, code:12, move to workspace 3, movetoworkspace, 3
bindd = $mainMod SHIFT, code:13, move to workspace 4, movetoworkspace, 4
bindd = $mainMod SHIFT, code:14, move to workspace 5, movetoworkspace, 5
bindd = $mainMod SHIFT, code:15, move to workspace 6, movetoworkspace, 6
bindd = $mainMod SHIFT, code:16, move to workspace 7, movetoworkspace, 7
bindd = $mainMod SHIFT, code:17, move to workspace 8, movetoworkspace, 8
bindd = $mainMod SHIFT, code:18, move to workspace 9, movetoworkspace, 9
bindd = $mainMod SHIFT, code:19, move to workspace 10, movetoworkspace, 10

# ============================================
# SYSTEM CONTROLS
# ============================================

# Lock screen (Ctrl+Alt+L - standard Linux)
bindd = CTRL ALT, L, lock screen, exec, $scriptsDir/LockScreen.sh

# Power menu (Ctrl+Alt+Delete)
bindd = CTRL ALT, Delete, power menu, exec, $scriptsDir/Wlogout.sh

# Volume controls (keyboard media keys)
bindeld = , xf86audioraisevolume, volume up, exec, $scriptsDir/Volume.sh --inc
bindeld = , xf86audiolowervolume, volume down, exec, $scriptsDir/Volume.sh --dec
bindld = , xf86audiomute, toggle mute, exec, $scriptsDir/Volume.sh --toggle

# Brightness controls
bindeld = , xf86monbrightnessup, brightness up, exec, $scriptsDir/Brightness.sh --inc
bindeld = , xf86monbrightnessdown, brightness down, exec, $scriptsDir/Brightness.sh --dec

# Media controls
bindld = , xf86AudioPlayPause, play/pause, exec, $scriptsDir/MediaCtrl.sh --pause
bindld = , xf86AudioNext, next track, exec, $scriptsDir/MediaCtrl.sh --nxt
bindld = , xf86AudioPrev, previous track, exec, $scriptsDir/MediaCtrl.sh --prv

# ============================================
# SCREENSHOTS
# ============================================

bindd = , Print, screenshot full, exec, $scriptsDir/ScreenShot.sh --now
bindd = SHIFT, Print, screenshot area, exec, $scriptsDir/ScreenShot.sh --area
bindd = ALT, Print, screenshot window, exec, $scriptsDir/ScreenShot.sh --active

# ============================================
# SIMPLE NAVIGATION
# ============================================

# Move focus with arrow keys
bindd = $mainMod, left, focus left, movefocus, l
bindd = $mainMod, right, focus right, movefocus, r
bindd = $mainMod, up, focus up, movefocus, u
bindd = $mainMod, down, focus down, movefocus, d

# ============================================
# DWINDLE LAYOUT CONTROLS
# ============================================

# Cycle through windows
bindd = $mainMod, J, cycle next, cyclenext
bindd = $mainMod, K, cycle previous, cyclenext, prev

# Toggle split orientation
bindd = $mainMod, P, toggle pseudo, pseudo,
bindd = $mainMod SHIFT, I, toggle split, togglesplit

# Move focus with arrow keys
bindd = $mainMod, left, focus left, movefocus, l
bindd = $mainMod, right, focus right, movefocus, r
bindd = $mainMod, up, focus up, movefocus, u
bindd = $mainMod, down, focus down, movefocus, d

# Move windows
bindd = $mainMod SHIFT, left, move window left, movewindow, l
bindd = $mainMod SHIFT, right, move window right, movewindow, r
bindd = $mainMod SHIFT, up, move window up, movewindow, u
bindd = $mainMod SHIFT, down, move window down, movewindow, d

# Resize windows
binded = $mainMod CTRL, left, resize left (-50), resizeactive, -50 0
binded = $mainMod CTRL, right, resize right (+50), resizeactive, 50 0
binded = $mainMod CTRL, up, resize up (-50), resizeactive, 0 -50
binded = $mainMod CTRL, down, resize down (+50), resizeactive, 0 50

# ============================================
# HELPFUL UTILITIES
# ============================================

# Help/cheat sheet
bindd = $mainMod, H, show keybinds, exec, $scriptsDir/KeyHints.sh

# Refresh configuration
bindd = $mainMod SHIFT, R, refresh config, exec, $scriptsDir/Refresh.sh

# Calculator
bindd = $mainMod, C, calculator, exec, $UserScripts/RofiCalc.sh

# Web search
bindd = $mainMod, S, web search, exec, $scriptsDir/RofiSearch.sh

# ============================================
# WAYBAR CONTROLS
# ============================================

# Toggle waybar on/off
bindd = $mainMod CTRL ALT, B, toggle waybar, exec, pkill -SIGUSR1 waybar

# Waybar styles menu
bindd = $mainMod CTRL, B, waybar styles, exec, $scriptsDir/WaybarStyles.sh

# Waybar layout menu
bindd = $mainMod ALT, B, waybar layout, exec, $scriptsDir/WaybarLayout.sh

# ============================================
# THEME CONTROLS
# ============================================

# Toggle between light and dark mode
bindd = $mainMod SHIFT, T, toggle theme, exec, $scriptsDir/DarkLight.sh

# ============================================
# NOTES
# ============================================
# 1. Super key alone opens app launcher (GNOME-style)
# 2. Super+1-9 for workspace switching
# 3. Super+Shift+1-9 to move windows
# 4. Alt+Tab for window switching (standard)
# 5. No conflicts with Ctrl+C, Ctrl+V, Ctrl+S, etc.
# 6. Media keys work as expected
# 7. Clean and minimal - only essential functionality